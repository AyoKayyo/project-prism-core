# Project Prism - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env to git!

# ====================
# API Keys
# ====================
GEMINI_API_KEY=your_gemini_api_key_here
# Optional: For multi-model support
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# ====================
# Model Selection
# ====================
# Local Models (Ollama)
LOCAL_CHAT_MODEL=llama3.1:8b
LOCAL_CODER_MODEL=qwen2.5-coder:7b
LOCAL_VISION_MODEL=llava:7b

# Cloud Models
CLOUD_ARCHITECT_MODEL=gemini-2.0-flash-exp
CLOUD_VISION_MODEL=gemini-1.5-pro

# ====================
# Safety & Budget
# ====================
DAILY_BUDGET_USD=1.00
COST_WARNING_THRESHOLD=0.80

# ====================
# Ray Storage Location
# ====================
# Leave empty to auto-detect cloud storage (iCloud/Dropbox)
# Or specify custom path:
# PRISM_RAY_PATH=/path/to/custom/rays

# ====================
# System Preferences
# ====================
# Idle threshold in seconds before entering dream mode
IDLE_THRESHOLD_SECONDS=300

# Dream cycle frequency in seconds
DREAM_CYCLE_INTERVAL=10

# Enable/disable features
ENABLE_VISUAL_CORTEX=true
ENABLE_BROWSER_AGENT=false
ENABLE_VOICE_SYNTHESIS=false

# ====================
# Development
# ====================
# Set to "true" for verbose logging
DEBUG_MODE=false

# Use sandbox config for testing
# RILEY_CONFIG_PATH=./sandbox_config.json
